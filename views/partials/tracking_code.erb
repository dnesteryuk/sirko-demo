<script>
  (function(w,m){w[m]=function(){w[m].q.push(arguments);};w[m].q=[];})(window,'sirko');

  sirko('engineUrl', '<%= sirko_engine_url %>');
  sirko('offline', true);

  sirko('rejected', function() {
    var predictionFor = sessionStorage.getItem('predictionFor')

    if (predictionFor !== window.location.href) return;

    var html = sessionStorage.getItem('predictionList', html);

    if (!html) return;

    document.querySelector('#predicted_pages ul').innerHTML = html;
  });
</script>

<script async src="<%= sirko_engine_url %>/assets/client.js"></script>

<% if ga_tracking_id %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '<%= ga_tracking_id %>', 'auto');
    ga('send', 'pageview');
  </script>
<% end %>
